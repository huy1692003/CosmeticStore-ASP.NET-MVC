@{
    Layout = "~/Views/Shared/_layoutAdmin.cshtml";
    ViewData["Title"] = Model == null ? "Thêm danh mục" : "Sửa danh mục";
}
@model BanMyPham.Models.DanhMuc

<div class="container-fluid">
    <div class="row">
        <div class="">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">@ViewData["Title"]</h4>
                    
                    <form method="post" asp-area="Admin" asp-controller="DanhMucManagement" asp-action="@(Model == null ? "Create" : "Edit")">
                        <div class="mb-3">
                            <label asp-for="MaDanhMuc" class="form-label">Mã danh mục</label>
                            <input value="@Model?.MaDanhMuc" name="MaDanhMuc" asp-for="MaDanhMuc" class="form-control" required />
                            <span asp-validation-for="MaDanhMuc" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="TenDanhMuc" class="form-label">Tên danh mục</label>
                            <input value="@Model?.TenDanhMuc" name="TenDanhMuc" asp-for="TenDanhMuc" class="form-control" required />
                            <span asp-validation-for="TenDanhMuc" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Index","DanhMucManagement")" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Quay lại
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Lưu
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function previewImage(input) {
            var preview = document.getElementById('imagePreview');
            preview.innerHTML = '';

            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function(e) {
                    var img = document.createElement('img');
                    img.src = e.target.result;
                    img.style.maxWidth = '200px';
                    img.alt = 'Preview Image';
                    preview.appendChild(img);
                }

                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}
